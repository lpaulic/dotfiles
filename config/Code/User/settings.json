{
    "terminal.integrated.rendererType": "dom",
    "editor.rulers": [],
    "breadcrumbs.enabled": true,
    "window.zoomLevel": 0,
    "window.menuBarVisibility": "toggle",
    "workbench.iconTheme": "vscode-icons",
    "workbench.activityBar.visible": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.enablePreview": false,
    "workbench.editor.tabSizing": "shrink",
    "editor.fontSize": 12,
    "editor.fontFamily": "Hack",
    "editor.minimap.enabled": false,
    "editor.hideCursorInOverviewRuler": true,
    "editor.formatOnSave": true,
    "editor.trimAutoWhitespace": true,
    "editor.semanticHighlighting.enabled": false,
    "json.format.enable": false,
    "editor.quickSuggestions": {
        "comments": "off",
        "strings": "off",
        "other": "off"
    },
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "scm.diffDecorations": "all",
    "git.confirmSync": false,
    "terminal.external.linuxExec": "kitty",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.arguments": [
        "-background-index",
        "-compile-commands-dir=build/"
    ],
    "editor.minimap.maxColumn": 80,
    "files.trimTrailingWhitespace": true,
    "[c]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "clangd.semanticHighlighting.enabled": false,
    "python.languageServer": "Jedi",
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": false,
    "python.linting.lintOnSave": false,
    "python.formatting.autopep8Args": ["--max-line-length", "160", "--experimental"],
    "plantuml.exportOutDir": "docs/assets/images",
    "plantuml.exportIncludeFolderHeirarchy": false,
    "plantuml.exportSubFolder": false,
    "editor.guides.indentation": false,
    "workbench.colorTheme": "Nord",
    "rust-analyzer.check.overrideCommand": ["cargo", "clippy", "--message-format=json"],
    "rust-analyzer.semanticHighlighting.operator.specialization.enable": true,
    "rust-analyzer.semanticHighlighting.punctuation.separate.macro.bang": true,
    "rust-analyzer.semanticHighlighting.punctuation.specialization.enable": true,
    "rust-analyzer.interpret.tests": true,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "[rust]": {
        "editor.semanticHighlighting.enabled": false
    },
    "cSpell.userWords": [
        "clippy",
        "cpus",
        "gethostname",
        "HDLC",
        "impls",
        "Mqtt",
        "pngme",
        "rumqttc",
        "rustdoc",
        "rustfmt",
        "rustup",
        "sysinfo"
    ],
}
